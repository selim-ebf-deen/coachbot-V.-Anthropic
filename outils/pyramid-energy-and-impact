    <script>
        let currentEnergy = 70;

        function updateEnergyBar(level = null) {
            const energyFill = document.getElementById('energy-fill');
            const energyPercent = document.getElementById('energy-percent');
            
            if (level !== null) {
                // Énergie selon le niveau sélectionné
                switch(level) {
                    case 1: currentEnergy = 90; break; // Base = énergie maximale
                    case 2: currentEnergy = 75; break; // Équilibre social
                    case 3: currentEnergy = 65; break; // Compétences
                    default: currentEnergy = 70;
                }
            } else {
                currentEnergy = 70; // Retour normal
            }
            
            energyFill.style.height = currentEnergy + '%';
            energyPercent.textContent = currentEnergy + '%';
        }

        function highlightLevel(levelNumber) {
            // Réinitialiser toutes les formes
            for (let i = 1; i <= 3; i++) {
                const shape = document.getElementById('shape-' + i);
                shape.style.transform = 'scale(1)';
                shape.style.filter = 'brightness(1)';
                shape.style.zIndex = '1';
            }
            
            // Mettre en évidence la forme sélectionnée
            const selectedShape = document.getElementById('shape-' + levelNumber);
            selectedShape.style.transform = 'scale(1.15)';
            selectedShape.style.filter = 'brightness(1.3)';
            selectedShape.style.zIndex = '10';
            
            // Animer la barre d'énergie
            updateEnergyBar(levelNumber);
            
            // Retour normal après 2 secondes
            setTimeout(() => {
                selectedShape.style.transform = 'scale(1)';
                selectedShape.style.filter = 'brightness(1)';
                selectedShape.style.zIndex = '1';
                updateEnergyBar();
            }, 2000);
        }

        // Initialisation
        window.addEventListener('load', function() {
            updateEnergyBar();
            
            // Animation séquentielle au chargement
            setTimeout(() => highlightLevel(1), 1000);
            setTimeout(() => highlightLevel(2), 2500);
            setTimeout(() => highlightLevel(3), 4000);
        });
    </script>
